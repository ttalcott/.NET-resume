@model travis_resume.Models.ResumeViewModels.ResumeViewModel

@{
    ViewData["Title"] = "Resume";
}

<div class="col-sm-12">
    <h1 class="center">@Html.DisplayFor(model => model.Contact.PersonFullName)</h1>
    <h4 class="center">@Html.DisplayFor(model => model.Contact.PersonEmail)</h4>
    <h4 class="center">@Html.DisplayFor(model => model.Contact.PersonPhone)</h4>
    <h4 class="center"><a href="http://www.lyradevelopment.com"  target="_blank">www.lyradevelopment.com</a></h4>
    <h4 class="center"><a href="https://www.github.com/ttalcott" target="_blank">www.github.com/ttalcott</a></h4>
    <hr />

</div>


<div class="job-history">
    <h3><strong>Experience:</strong></h3>

@foreach (var item in Model.Job)
{
    <h3>@Html.DisplayFor(modelItem => item.jobName)</h3>
    <h4>@Html.DisplayFor(modelItem => item.jobTitle)</h4>
    <p><em>@Html.DisplayFor(modelItem => item.jobDateHired) through @Html.DisplayFor(modelItem => item.jobDateOver)</em></p>  
    <p>@Html.DisplayFor(modelItem => item.jobDescription)</p>

}
    <hr />
</div>

<div class="education-history">
    <h3><strong>Education:</strong></h3>

    @foreach (var item in Model.Schools)
    {
        <h3>@Html.DisplayFor(modelItem => item.EducationName)</h3>
        <h4>@Html.DisplayFor(modelItem => item.EducationDescription)</h4>
        <p>@Html.DisplayFor(modelItem => item.EducationLevel)</p>

    }
    <hr />
</div>

