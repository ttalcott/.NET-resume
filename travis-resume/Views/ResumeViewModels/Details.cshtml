@model travis_resume.Models.ResumeViewModels.ResumeViewModel

@{
    ViewData["Title"] = "Resume";
}

<div class="col-sm-12">
    <h1>@Html.DisplayFor(model => model.Contact.PersonFullName)</h1>
    <h4>@Html.DisplayFor(model => model.Contact.PersonEmail)</h4>
    <h4>@Html.DisplayFor(model => model.Contact.PersonPhone)</h4>
    <hr />

</div>


<h4>@Html.DisplayFor(model => model.Job.FirstOrDefault().jobName)</h4>
    @foreach (var item in Model.Schools)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EducationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationLevel)
            </td>
        </tr>
    }

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
