                <input asp-for="jobDescription" class="form-control" />
                <span asp-validation-for="jobDescription" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="jobTitle" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="jobTitle" class="form-control" />
                <span asp-validation-for="jobTitle" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
