@model IEnumerable<travis_resume.Models.Jobs>

@{
    ViewData["Title"] = "Job History";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
    <div class="job-history">
        <h3><strong>Experience:</strong></h3>

        @foreach (var item in Model)
        {
            <h3>@Html.DisplayFor(modelItem => item.jobName)</h3>
            <h4>@Html.DisplayFor(modelItem => item.jobTitle)</h4>
            <p><em>@Html.DisplayFor(modelItem => item.jobDateHired) through @Html.DisplayFor(modelItem => item.jobDateOver)</em></p>
            <p>@Html.DisplayFor(modelItem => item.jobDescription)</p>
            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

        }
        <hr />
    </div>

</body>
</html>
